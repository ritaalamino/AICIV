	<script src="/common/Store.js"></script>
	<script src="/gui/Sound.js"></script>
	<script src="/gui/Button.js"></script>
	<script src="/gui/Slider.js"></script>
	<script>
		const app = new PIXI.Application({
			width: window.innerWidth,
			height: window.innerHeight,
			backgroundColor: 0x0000000,
			resolution: window.devicePixelRatio || 1,
		});

		(function () {
			const wf = document.createElement('script');
			wf.src = `${document.location.protocol === 'https:' ? 'https' : 'http'
				}://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js`;
			wf.type = 'text/javascript';
			wf.async = 'true';
			const s = document.getElementsByTagName('script')[0];
			s.parentNode.insertBefore(wf, s);
		}());

		window.WebFontConfig = {
			google: {
				families: ['Roboto', 'Snippet', 'Arvo:700italic', 'Podkova:700'],
			},

			active() {
				console.log('fonts loaded');
			},
		};


		const store = new Store();

		document.body.appendChild(app.view);
	</script>
